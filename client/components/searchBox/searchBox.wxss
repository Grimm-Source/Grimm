/* components/searchBox/searchBox.wxss */

.searchbar {
  width: calc(100% - 32rpx);
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 64rpx;
  background: #F5F5F5;
  border: 2px solid var(--accent-color);
}

.searchbar icon {
  left: 298rpx;
  position: absolute;
  color: rgba(0, 0, 0, 0.3);
}

.searchbar input {
  font-size: 26rpx;
  position: absolute;
  left: 330rpx;
}

