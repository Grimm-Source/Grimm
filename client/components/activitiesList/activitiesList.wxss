/* components/activitiesList/activitiesList.wxss */

.activity-item {
  margin: 16rpx 24rpx 32rpx 24rpx;
  border-radius: 12rpx;
  border: solid gray 0rpx;
  box-shadow:  0 10rpx 20rpx rgba(0,0,0,0.3);
}

.activity-detail { 
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.activity-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.activity-title {
  display:block;
  position: relative;
  top: -160rpx;
  font-size: 21px;
  color: whitesmoke;
  padding: 0rpx 12rpx ;
}

.activity-description {
  display:block;
  position: relative;
  font-size: 15px;
  top: -160rpx;
  color: whitesmoke;
  padding: 0rpx 12rpx 20rpx 12rpx ;
}

.activity-time-location {
  border-bottom: solid #d3d3d3 2rpx;
  padding: 20rpx 12rpx ;
}

.activity-time, .activity-location {
  display: block;
  font-size: 13px;
}

.activity-action {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
}

.activity-people {
  padding: 20rpx 12rpx ;
}

.activity-button image {
  width: 32rpx;
  height: 32rpx;
  padding: 20rpx 20rpx;
}


