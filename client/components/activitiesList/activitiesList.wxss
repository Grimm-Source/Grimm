/* components/activitiesList/activitiesList.wxss */

.activity-item {
  margin: 16rpx 24rpx 32rpx 24rpx;
  border-radius: 9px;
  border: solid gray 0rpx;
  box-shadow:  0 10rpx 20rpx rgba(0,0,0,0.3);
}

.activity-detail { 
  width: 100%;
  height: 100px;
  border-radius: 9px 9px 0px 0px;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 100px;
  border-radius: 9px 9px 0 0;
}

.activity-title {
  display:block;
  position: relative;
  top: -70px;
  font-size: 22px;
  color: whitesmoke;
  padding: 0rpx 20px ;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-description {
  display:block;
  position: relative;
  font-size: 14px;
  top: -70px;
  color: whitesmoke;
  padding: 0rpx 20px 20rpx 20px ;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 33px;
}

.activity-time-location {
  border-bottom: solid #d3d3d3 2rpx;
  padding: 10px 20px;
  background-color: #FFFFFF;
  color: #000000;
}

.activity-time, .activity-location {
  display: block;
  font-size: 14px;
}

.activity-action {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  height: 36px;
  background-color: #FFFFFF;
  color: #000000;
  border-radius: 0 0 9px 9px;
}

.activity-people {
  padding: 6px 20px ;
}

.activity-button image {
  width: 20px;
  height: 16px;
  padding: 12px 4px;
  display: inline-block;
  vertical-align: middle;
}

.activity-button span {
  padding-right: 12px;
  display: inline-block;
  vertical-align: middle;
  font-size: 16px;
}


