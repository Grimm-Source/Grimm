/* components/activitiesPicker/activitiesPicker.wxss */

.myactivities-select {
  display: inline-block;
  margin: 0 12px;
}

.category-all,
.time-all {
  position: relative;
  display: inline-block;
  font-size: 17px;
  font-weight: bold;
  padding-left: 20px;
  padding-right: 20px;
  text-align: center;
  height: auto;
}

.category-picker,
.time-picker {
  display: inline-block;
  position: relative;
  width: 80%;
  box-sizing: border-box;
  background:white;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.category-type,
.time-selector {
  display: inline-block;
  text-align: center;
  font-size: 15px;
  box-sizing: border-box;
  margin-right: 20px;
}

.category-picker .selected,
.time-picker .selected{
  color: #60D5EC;
  scale: 1.15;
}
