.searchActivity-info {
    display: flex;
    flex-direction: column;
    margin-left: 15px;
    width: 100%;
}

.searchActivity-title {
    font-size: 22px;
    margin-bottom: 10px;
    line-height: 31px;
}

.searchActivity-title span.green{
    color: var(--accent-color);
}

.searchActivity-detail {
    display: flex;
    flex-direction: column;
    font-size: 14px;
    line-height: 23px;
}

.searchActivity-title {
    overflow: hidden; 
    text-overflow: ellipsis;
    display: -webkit-box; 
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2; 
}

.noneActivity{
    color: #00BD7C;
    text-align: center;
}