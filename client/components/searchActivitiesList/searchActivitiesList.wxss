/* components/searchActivitiesList/searchActivity.wxss */
.searchActivities {
    margin-top: 18px;
}

.searchActivity-item {
    display: flex;
    flex-direction: row;
    margin: 16px 0;
    padding: 14px;
    background-color: #fff;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    border: solid #D8D8D8 0rpx;
    box-shadow: 0px 2px 10px rgba(170, 170, 170, 0.5);
}

