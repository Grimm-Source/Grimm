.home{
    width: 100%;
    height: 100%;
    background: #99CC66;
    padding: 1px 0;
}

.tile-container{
    width: 100%;
    display: flex;
    margin: 2.5% 0;
    flex-wrap: wrap;
    justify-content: start;
}

.tile-container .tile{
    width: 40%;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: left;
    background: white;
    border-radius: 10px;
    color: #99CC00;
    margin: 1% 1%;
    box-shadow: 2px 2px 7px #336600;
    flex-direction: column;
    padding-left: 8%;
}

.tile-container .tile .description{
    color: #999999;
    font-size: 12px;
    margin-top: 20px;
}