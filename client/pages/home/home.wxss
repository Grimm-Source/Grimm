.home{
    width: 100%;
    height: 100%;
    background: white;
    padding: 1px 0;
}

.home .info{
    padding: 2.5% 5%;
}

.home .info navigator{
    display: inline;
    color: #248bd6;
}

.main-board{
    display: flex;
    justify-content: center;
}

.main-board .main-info{
    height: 300rpx;
    width: 90%;
    background: #99CC66;
    border-radius: 10px;
    box-shadow: 2px 2px 7px #c8db8c;
    align-content: center;
    justify-content: start;
}

.main-board .main-info image{
    width: 100rpx;
    height: 100rpx;
    margin: 50rpx;
}

.main-board .main-info, .home .tiles{
    display: flex;
    margin: 2.5% 0;
    flex-wrap: wrap;  
}

.home .tile-title{
    margin: 5% 5% 5% 8%;
    color: #afcd50;
}

.home .tiles{
    height: 100%;
    border-radius: 50px 50px 0 0;
    background: white;
    justify-content: start;
    padding: 0 1.25%;
}

.home .tiles .tile{
    width: 47.5%;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: left;
    border: 1px solid #c8db8c;
    color: #afcd50;
    border-radius: 10px;
    margin: 1.25% 1.25% 1.25% 1.25%;
    flex-direction: column;
    padding-left: 4%;
    box-sizing: border-box;
}

.home .tiles .tile.disabled{
    opacity: 50%;
}

.home .tiles .tile .title{
    display: flex;
    justify-content: start;
    align-items: center;
}

.home .tiles .tile .title image{
    width: 20px;
    height: 20px;
    margin: 0 5px 0 0;
}

.tiles .tile .description{
    color: #999999;
    font-size: 12px;
    margin-top: 20px;
}