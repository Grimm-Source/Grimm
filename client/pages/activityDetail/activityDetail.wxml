<wxs module="dateFormatter" src="../../utils/dateFormatter.wxs"></wxs>
<view class="activity">
<view class="page__hd">
<view class="page__title">{{activityUi.title}}</view>
</view>

<view class="page__bd">
<view class="weui-form-preview">
<view class="weui-form-preview__hd">

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">开始时间</view>
<view class="weui-form-preview__value">{{dateFormatter.timeToFullDate(activityUi.startTimeStamp)}}</view>
</view>

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">结束时间</view>
<view class="weui-form-preview__value">{{dateFormatter.timeToFullDate(activityUi.endTimeStamp)}}</view>
</view>

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">地点</view>
<view class="weui-form-preview__value">{{activityUi.location}}</view>
</view>

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">内容</view>
<view class="weui-form-preview__value">{{activityUi.content}}</view>
</view>

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">注意事项</view>
<view class="weui-form-preview__value">{{activityUi.notice}}</view>
</view>

<view class="weui-form-preview__item">
<view class="weui-form-preview__label">其它</view>
<view class="weui-form-preview__value">{{activityUi.others}}</view>
</view>
<view class="register-detail" wx:if="{{isRegistered}}" >
    <view class="weui-form-preview__item">
    <view class="weui-form-preview__label">联系电话</view>
    <input class="weui-form-preview__value" disabled  value="{{activityUi.tel}}"/>
    </view>

    <view class="weui-form-preview__item">
    <view class="weui-form-preview__label">联系地址</view>
    <input class="weui-form-preview__value" disabled value="{{activityUi.address}}"/>
    </view>

    <view class="weui-form-preview__item">
    <view class="weui-form-preview__label">{{role === '视障人士'?"是否需要接送":"是否愿意接送视障人士"}}</view>
    <checkbox-group>
    <checkbox wx:if="{{role === '视障人士'}}" class="weui-form-preview__value" disabled checked="{{activityUi.needPickUp === 1}}"/>
    <checkbox wx:if="{{role !== '视障人士'}}" class="weui-form-preview__value" disabled checked="{{activityUi.toPickUp === 1}}"/>
    </checkbox-group>
    </view>
</view>

<view class="weui-form-preview__ft">
<text class="weui-form-preview__btn weui-form-preview__btn_primary" wx:if="{{!isRegistered}}" data-item="{{activity}}" hover-class="weui-form-preview__btn_active" bindtap="onTapApply">报名</text>
<text class="weui-form-preview__btn weui-form-preview__btn_primary" wx:if="{{isRegistered}}" data-item="{{activity}}" hover-class="weui-form-preview__btn_active" bindtap="onTapCancel">取消报名</text>
</view>

</view>
</view>
</view>
</view>