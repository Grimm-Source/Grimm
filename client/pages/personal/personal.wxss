/* pages/personal2/personal2.wxss */
page{
    height: 100%;
    background-color: rgb(241, 241, 241);
}

.personal_container{
    height: 100%;
    background-color: rgb(241, 241, 241);
}

.personal_header{
    height: 34%;
    background-color: white;
    margin-bottom: 5%;
    padding: 20rpx 30rpx;
}
.personal_header .setting_nav{
    height: 50rpx;
    display: flex;
    justify-content: flex-end;
}

.personal_header .setting_nav .setting_item image{
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}

.personal_header .user_nav{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20rpx 0 40rpx;
}

.personal_header .user_nav .user_nav_left{
    display: flex;
    align-items: center;
}

.personal_header .user_nav .user_nav_left .personal_banner{
    font-size: 28rpx;
    color: grey;
}

.personal_header .user_nav .user_nav_right{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: grey;
}

.personal_header .user_nav .avatar{
    width: 130rpx;
    height: 130rpx;
    border-radius: 65rpx;
    margin-right: 40rpx;
}
.personal_header .user_nav .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.personal_header .user_nav .user_nav_right .user_detail{
    width: 50rpx;
    height: 50rpx;
}
.personal_header .user_nav .user_nav_right .user_detail image{
    width: 100%;
    height: 100%;
}

.activity_classify{
    height: 80rpx;
    border-top: 1px solid lightgrey;
    display: flex;
    justify-content: space-around;
    font-size: 28rpx;
    color: grey;
    padding-top: 25rpx;
}

.activity_classify .activity_item_label{
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.activity_classify .activity_item_label image{
    width: 50rpx;
    height: 50rpx;
}

.activity_classify .activity_nav_item{
    text-align: center;
}

.personal_info_list{
    height: 60%;
    background-color: white;
    padding: 30rpx 30rpx 0;
}

.person_info_Item{
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 0;
    color: grey;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
}

.person_info_Item image{
    width: 40rpx;
    height: 40rpx;
}