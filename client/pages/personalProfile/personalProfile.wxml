<!--pages/personalProfile/personalProfile.wxml-->
<view class="profile-wrapper">
  <view class="profile-header">
    <image src="{{userInfo.avatarUrl}}"></image>
    <view>更新个人信息</view>
  </view>
  <view class="profile-form">
    <view class="profile-form-item">
      <view class="profile-form-label">手机号码</view>
      <input disabled="true" value="{{phone}}"/>
    </view>
    <view class="profile-form-item">
      <view class="profile-form-label">*姓名</view>
      <input name="name" placeholder="请填写姓名" bindchange="bindNameChange" value="{{name}}"/>
    </view>
    <view class="profile-form-item">
      <view class="profile-form-label">*性别</view>
      <picker bindchange="bindGenderChange" value="{{genderIndex}}" range="{{genders}}">
        <input disabled value="{{genders[genderIndex]}}"/>
      </picker>
    </view>
    <view class="profile-form-item">
      <view class="profile-form-label">出生日期</view>
      <picker mode="date" bindchange="bindBirthdayChange" value="{{birthday}}">
        <input disabled placeholder="请选择您的出生日期" value="{{birthday}}"/>
      </picker>
    </view>
    <view class="profile-form-item">
      <view class="profile-form-label">所在城市区域</view>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
        <input disabled placeholder="请选择您所在的城市区域" value="{{region[0]}}{{region[1]}}{{region[2]}}"/>
      </picker>
    </view>
  </view>
  <view class="profile-form-footer">
    <button type="primary" bindtap="onSubmit">提交信息</button>
  </view>
</view>
