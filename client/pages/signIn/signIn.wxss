/* pages/signIn/signIn.wxss */
.container {
  background: #EFEFEF;
  padding: 80rpx 28rpx;
  min-height: 100vh;
}

.title,
.card_title {
  font-weight: 600;
  font-size: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.title {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.card {
  background: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(170, 170, 170, 0.5);
  border-radius: 18rpx;
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.map {
  width: 100%;
  height: 312rpx;
  margin: 18rpx 0 20rpx;
}

.detail {
  font-size: 28rpx;
  line-height: 46rpx;
}

.sign_btn {
  margin: 90rpx auto 0;
  width: 452rpx;
  height: 84rpx;
  background: #113E6E;
  border-radius: 10rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ask_wrap {
  margin: 80rpx auto 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.line {
  height: 2rpx;
  width: 60rpx;
  background: #C4C4C4;
}

.ask {
  margin: 0 16rpx;
  font-size: 30rpx;
  color: #000
}

.input_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
  border-radius: 5px;
  width: 516rpx;
  height: 84rpx;
  padding: 10rpx 28rpx;
  box-sizing: border-box;
  margin:0 auto 100rpx;
}

.button{
  width: 60rpx;
  border-left: 2rpx solid #C4C4C4;
  padding-left: 18rpx;
  white-space: nowrap;

}