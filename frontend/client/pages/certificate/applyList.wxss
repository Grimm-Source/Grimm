/* pages/certificate/applyList.wxss */
@import 'applyList-wxa-auto-dark.wxss';
page{
  height: 100%;
}

.apply-container{
  background-color: #f1f1f1;
  display: flex;
  flex-direction: column;
  height: 100%;
}



.page-head{
  font-size: 13px;
  line-height: 18px;
  margin-left: 21px;
  display: block;
  padding-top: 20px;
  margin-bottom: 14px;
}
.scroll-container{
  flex: 1;
  overflow: scroll;
}
.page-footer{
  padding-top: 10px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.activity-block{
  margin: 0 14px;
  margin-bottom: 15px;
  background-color: #ffffff;
  padding: 12px 24px;
  display: flex;
  flex-flow: row nowrap;
  height: 100px;
  box-sizing: border-box;
  justify-content: space-between;
  border-radius: 10px;
}
.activity-info{
 display: flex;
 flex-direction: column;
}
.activity-title{
  display: block;
  font-size: 15px;
  line-height: 15px;
  flex: 1;
  height: 21px;
}
.activity-time {
  display:block;
  font-size: 13px;
  height: 23px;
  margin-bottom: 1px;
}

.activity-addr{
  display: block;
  line-height: 23px;
  font-size: 13px;
}

.check-area{
  width: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

